Algoritmo "enquanto"

Var
   numero, soma : inteiro

Inicio
      escreval("Digite o primeiro numero:")
      leia(numero)
      
      soma <- 0
      enquanto numero <> 0 faca
               soma <- soma + numero
               escreval("Digite outro numero:")
               leia(numero)
      fimenquanto
      
      escreval(soma)

Fimalgoritmo